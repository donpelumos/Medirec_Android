<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cccccc"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.45"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:id="@+id/leftArrow"
                android:src="@drawable/red_left"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="User"
                android:textSize="22sp"
                android:textColor="#454545"
                android:id="@+id/userType" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.45"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:clickable="true"
                android:id="@+id/rightArrow"
                android:src="@drawable/red_right"/>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/userSignUpLayout"
                android:orientation="vertical">
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/userSurname"
                    android:hint="Surname"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/userFirstname"
                    android:hint="Firstname"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/userMiddlename"
                    android:hint="Middlename"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/userEmail"
                    android:hint="Email Address"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/userPhone"
                    android:hint="Phone Number"
                    android:inputType="number"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/userPassword"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/userRePassword"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:textColor="#343434"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#000000"
                        android:text="I agree to the "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/termsLink"
                        android:textColor="@color/backgroundRed"
                        android:clickable="true"
                        android:text="Terms and Conditions"/>
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/userSignUpButton"
                    android:text="Sign Up"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:padding="3dp"
                    android:textColor="#ffffff"
                    android:background="@color/backgroundRed"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:id="@+id/doctorSignUpLayout"
                android:orientation="vertical">
                <Spinner
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/hospitalIDSpinner"
                    android:textColor="#343434">
                </Spinner>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:inputType="number"
                    android:id="@+id/doctorFolio"
                    android:hint="Folio Number"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/hospitalName"
                    android:hint="Hospital Name"
                    android:enabled="false"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="270dp"
                    android:layout_height="160dp"
                    android:gravity="top"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/hospitalAddress"
                    android:hint="Hospital Address"
                    android:enabled="false"
                    android:background="#ffffff"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/doctorSurname"
                    android:hint="Surname"
                    android:enabled="false"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/doctorFirstname"
                    android:hint="Firstname"
                    android:enabled="false"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/doctorMiddlename"
                    android:hint="Middlename"
                    android:enabled="false"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/doctorSpeciality"
                    android:hint="Speciality"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/doctorEmail"
                    android:hint="Email Address"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/doctorPhone"
                    android:hint="Phone Number"
                    android:inputType="number"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/doctorPassword"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/doctorRePassword"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:textColor="#343434"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#000000"
                        android:text="I agree to the "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/termsLink2"
                        android:textColor="@color/backgroundRed"
                        android:clickable="true"
                        android:text="Terms and Conditions"/>
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/doctorSignUpButton"
                    android:text="Sign Up"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="#ffffff"
                    android:background="@color/backgroundRed"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/nurseSignUpLayout"
                android:visibility="gone"
                android:orientation="vertical">
                <Spinner
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/hospitalIDSpinner2"
                    android:textColor="#343434">
                </Spinner>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/hospitalName2"
                    android:hint="Hospital Name"
                    android:enabled="false"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="270dp"
                    android:layout_height="160dp"
                    android:gravity="top"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/hospitalAddress2"
                    android:hint="Hospital Address"
                    android:enabled="false"
                    android:background="#ffffff"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/nurseSurname"
                    android:hint="Surname"
                    android:enabled="false"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/nurseFirstname"
                    android:hint="Firstname"
                    android:enabled="false"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/nurseMiddlename"
                    android:hint="Middlename"
                    android:enabled="false"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/nurseEmail"
                    android:hint="Email Address"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/nursePhone"
                    android:hint="Phone Number"
                    android:inputType="number"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/nursePassword"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="#343434"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/nurseRePassword"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:textColor="#343434"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#000000"
                        android:text="I agree to the "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/termsLink3"
                        android:textColor="@color/backgroundRed"
                        android:clickable="true"
                        android:text="Terms and Conditions"/>
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/nurseSignUpButton"
                    android:text="Sign Up"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="#ffffff"
                    android:background="@color/backgroundRed"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/paramedicSignUpLayout"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>