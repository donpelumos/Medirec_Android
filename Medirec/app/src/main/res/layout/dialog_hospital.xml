<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@drawable/background_rounded_dialog">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="115dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:id="@+id/hospitalName"
                    android:textColor="#121212"
                    android:text="Hospital Name"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="-2dp"
                        android:src="@drawable/location"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:textSize="11sp"
                        android:textColor="#232323"
                        android:id="@+id/hospitalAddress"
                        android:text="Hospital Address - No. X, Street Random, Off Road Random, Random Area Name, Lagos State."/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#DDDDDD"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="email@domain_name.com"
                    android:textColor="#343434"
                    android:id="@+id/hospitalEmail"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="08012345678"
                    android:clickable="true"
                    android:textColor="#343434"
                    android:id="@+id/hospitalPhoneNumber"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:clickable="true"
                    android:text="www.hospital_domain_name.com"
                    android:textColor="@color/backgroundRed"
                    android:id="@+id/hospitalWebsite"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
        <utilities.RoundRectCornerImageView
            android:layout_width="105dp"
            android:layout_height="145dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:id="@+id/hospitalImage"
            android:src="@drawable/hospital4"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addOrRemoveDoctor"
                android:padding="4dp"
                android:textColor="#FFFFFF"
                android:clickable="true"
                android:background="@color/backgroundRed"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="Remove"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>