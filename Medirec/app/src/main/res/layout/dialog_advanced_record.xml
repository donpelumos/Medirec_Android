<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/background_rounded_dialog">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_gravity="center_horizontal"
        android:text="Allergy Name"
        android:textColor="#343434"
        android:enabled="false"
        android:textSize="17sp"
        android:textAlignment="center"
        android:id="@+id/title"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#DDDDDD"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rounded_summary"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:padding="6dp"
        android:text="This contains the description of this advanced medical record. Every change made bythe user will be confirmed by one of the user's doctors preferrably the one marked as personal before the change is saved. Doctors can also add to this section too as deemed necessary. Likewise, any removal will only be on the confirmation of a doctor."
        android:textColor="#343434"
        android:textSize="14sp"
        android:id="@+id/message"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editButton"
        android:textSize="16sp"
        android:text="Edit"
        android:textColor="#FFFFFF"
        android:background="@drawable/background_rounded_button_full"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>